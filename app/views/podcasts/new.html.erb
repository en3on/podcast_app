<h1>New Podcast</h1>

<form action="<%= podcasts_path %>" method="POST">
  <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

  <label for="name">Name</label>
  <input type="text" id="name" name="name" placeholder="e.g The Thinking Athiest" />

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre" placeholder="e.g Politics" />

  <label for="image">Image Link</label>
  <input type="text" id="image" name="image" placeholder="e.g https://photos.com/image.jpg" />

  <input type="submit" value="Create" />
</form>
